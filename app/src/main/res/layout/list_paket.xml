<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_outline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:id="@+id/nama_paket"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4.7sp"
                tools:text="Paket Hemat 1"
                />

            <edu.counterview.CounterView
                android:layout_alignParentEnd="true"
                android:id="@+id/cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_harga"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4.7sp"
                tools:text="Harga   :"
                />

            <TextView
                android:text="0"
                android:layout_alignParentEnd="true"
                android:id="@+id/tv_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_diskon"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4.7sp"
                tools:text="Diskon   :"
                />

            <TextView
                android:text="0"
                android:layout_alignParentEnd="true"
                android:id="@+id/tv_diskon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_marginHorizontal="10dp"
            android:background="@color/popup_menu_item_text_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <id.kopipintar.pos.utils.CustomListView
            android:id="@+id/lv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btn_remove"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="Remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>